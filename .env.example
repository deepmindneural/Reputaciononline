# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-here

# Database (SQLite for development and production)
DATABASE_URL="file:./prisma/dev.db"

# JWT Secret (required for authentication tokens)
JWT_SECRET=your-jwt-secret-key-here

# OpenAI Configuration (required for ChatSofia component)
NEXT_PUBLIC_OPENAI_API_KEY=your-openai-api-key-here

# Google OAuth (for YouTube)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# YouTube OAuth (uses same Google credentials with different scopes)
# YOUTUBE_CLIENT_ID=your-google-client-id (same as GOOGLE_CLIENT_ID)
# YOUTUBE_CLIENT_SECRET=your-google-client-secret (same as GOOGLE_CLIENT_SECRET)

# Facebook OAuth (for Facebook, Instagram & Threads)
FACEBOOK_CLIENT_ID=your-facebook-app-id
FACEBOOK_CLIENT_SECRET=your-facebook-app-secret

# Threads OAuth (uses same Facebook credentials with different scopes)
# THREADS_CLIENT_ID=your-facebook-app-id (same as FACEBOOK_CLIENT_ID)
# THREADS_CLIENT_SECRET=your-facebook-app-secret (same as FACEBOOK_CLIENT_SECRET)

# Twitter/X OAuth
TWITTER_CLIENT_ID=your-twitter-client-id
TWITTER_CLIENT_SECRET=your-twitter-client-secret

# LinkedIn OAuth
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# OpenAI API Key (for chatbot)
OPENAI_API_KEY=your-openai-api-key
